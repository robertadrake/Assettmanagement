@page
@model Assettmanagement.Pages.LoginModel
@{
    Layout = null;
}
<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 50vh;
        background-color: #f7f7f7; /* Optional: You can set a background color or image */
    }

    .wrapper {
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); /* Optional: Adds a subtle shadow to the wrapper */
    }
</style>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css">
    <script src="~/js/site.js"></script>
</head>

<body>
    <div class="container">
        <div class="row justify-content-center align-items-center" style="height: 100vh;">
            <div class="col-md-6">
                <div class="wrapper fadeInDown">
                    <div id="formContent">
                        <!-- Icon -->
                        <div class="fadeIn first d-flex justify-content-center">
                            <img src="https://hochikiamerica-1.azureedge.net/medias/logo/logo-medium.png" id="icon" alt="User Icon" />
                        </div>

                        <br />
                        <!-- Login Form -->
                        <form method="post" class="d-flex flex-column align-items-center">
                            <input type="text" id="Email" class="fadeIn second form-control mb-2" name="Email" placeholder="Email">
                            <input type="password" id="Password" class="fadeIn second form-control mb-2" name="Password" placeholder="Password">
                            <br />
                            <button type="submit" class="fadeIn fourth btn btn-primary btn-lg">Log In</button>
                        </form>

                        <!-- Prompt area -->
                        @if (!string.IsNullOrEmpty(Model.ResultMessage))
                        {
                            <div class="alert alert-info mt-3">@Model.ResultMessage</div>
                        }

                    </div>
                </div>
            </div>
        </div>
</body>