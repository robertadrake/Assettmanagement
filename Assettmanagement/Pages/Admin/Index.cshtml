@page
@model Assettmanagement.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin";
}

<h2>Admin</h2>

<div>
    <a asp-page="./AddAsset" class="btn btn-primary">Add Asset</a>
    <a asp-page="./AddUser" class="btn btn-primary">Add User</a>
</div>

<h3>Assets</h3>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Serial Number</th>
            <th>Asset Number</th>
            <th>Location</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var asset in Model.Assets)
        {
            <tr>
                <td>@asset.Name</td>
                <td>@asset.Description</td>
                <td>@asset.SerialNumber</td>
                <td>@asset.AssetNumber</td>
                <td>@asset.Location</td>
                <td>
                    <form method="post" asp-page-handler="DeleteAsset">
                        <input type="hidden" asp-for="SelectedAssetId" value="@asset.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<h3>Users</h3>
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    <form method="post" asp-page-handler="DeleteUser">
                        <input type="hidden" asp-for="SelectedUserId" value="@user.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.ResultMessage != null)
{
    <div class="alert alert-info">@Model.ResultMessage</div>
}
