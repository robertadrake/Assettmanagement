@page
@model Assettmanagement.Pages.Admin.AddUserModel
@{
    ViewData["Title"] = "Add User";
}


<div class="container">
<h2>Add User</h2>
<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="User.FirstName">First Name</label>
        <input asp-for="User.FirstName" class="form-control" />
        <span asp-validation-for="User.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="User.LastName">Last Name</label>
        <input asp-for="User.LastName" class="form-control" />
        <span asp-validation-for="User.LastName" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add User</button>
    <button type="submit" asp-page-handler="ExportUsers" class="btn btn-primary">Export Users</button>
    
</form>


    <form method="post" enctype="multipart/form-data" asp-page-handler="ImportUsers">
        <div class="form-group">
            <label for="importUsersFile">Import Users (CSV):</label>
            <input type="file" id="importUsersFile" name="file" class="form-control-file" />
        </div>
        <button type="submit" class="btn btn-primary">Import Users</button>
    </form>

@if (!string.IsNullOrEmpty(Model.ResultMessage))
{
    <div class="alert alert-info mt-3">@Model.ResultMessage</div>
}
<a asp-page="./Index">Back to Admin</a>
</div>
